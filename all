// Factorial (while loop)
#include <stdio.h>
int main()
{
    int n, i = 1, f = 1;
    printf("Enter any number: ");
    scanf("%d", &n);
    while (i <= n)
    {
        f = f * i;
        i++;
    }
    printf("Factorial = %d", f);
    return 0;
}

// Factorial (do ...... while loop)
#include <stdio.h>
int main()
{
    int n, i = 1, f = 1;
    printf("Enter any number: ");
    scanf("%d", &n);
    do
    {
        f = f * i;
        i++;
    } while (i <= n);
    printf("Factorial = %d", f);
    return 0;
}

// Factor (while loop)
#include <stdio.h>
int main()
{
    int n, i = 1;
    printf("Enter any number: ");
    scanf("%d", &n);
    printf("Factors of %d are: ", n);
    while (i <= n)
    {
        if (n % i == 0)
        {
            printf("%d ", i);
        }
        i++;
    }
    return 0;
}

// Factor (do....while loop)
#include <stdio.h>
int main()
{
    int n, i = 1;
    printf("Enter any number: ");
    scanf("%d", &n);
    printf("Factors of %d are: ", n);
    do
    {
        if (n % i == 0)
        {
            printf("%d ", i);
        }
        i++;
    } while (i <= n);
    return 0;
}

// multiplication Table (while loop)
#include <stdio.h>
int main()
{
    int i = 1, n;
    printf("Enter a number: ");
    scanf("%d", &n);
    while (i <= n)
    {
        printf("%d x %d = %d ", n, i, n * i);
        i++;
    }
    return 0;
}
// multiplication Table (do....while loop)
#include <stdio.h>
int main()
{
    int i = 1, n;
    printf("Enter a number: ");
    scanf("%d", &n);
    do
    {
        printf("%d x %d = %d\n", n, i, n * i);
        i++;
    } while (i <= 10);
    return 0;
}

// Prime (while loop)
#include <stdio.h>
int main()
{
    int n, i = 2;
    printf("Enter any number: ");
    scanf("%d", &n);
    if (n <= 1)
    {
        printf("%d is not a prime number.\n", n);
    }
    else
    {
        while (i * i <= n)
        {
            if (n % i == 0)
            {
                printf("%d is not a prime number.\n", n);
                return 0;
            }
            i++;
        }
        printf("%d is a prime number.\n", n);
    }
    return 0;
}

// Prime (do....while loop)
#include <stdio.h>
int main()
{
    int n, i = 2;
    printf("Enter any number: ");
    scanf("%d", &n);
    if (n <= 1)
    {
        printf("%d is not a prime number.\n", n);
    }
    else
    {
        do
        {
            if (n % i == 0)
            {
                printf("%d is not a prime number.\n", n);
            }
            i++;
        } while (i * i <= n);
        printf("%d is a prime number.\n", n);
    }
    return 0;
}
